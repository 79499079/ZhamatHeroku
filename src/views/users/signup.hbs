<div class="espacio"></div>
<main class="container">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card">
        <div class="card-header">
          <h3 align="center"><strong>Registro</strong></h3>
        </div>
        <div class="card-body">
          <form action="/users/signup" method="POST">
            <div class="form-group">
              <textarea rows="1" class="form-control" name="name" placeholder="Nombres y Apellidos" value="{{name}}"  required></textarea>
            </div>
            <div class="form-group">
              <textarea rows="1" class="form-control" name="usuario" placeholder="Nombre Usuario" value="{{usuario}}"  required></textarea>
            </div>
            <div class="form-group">
              <input type="email" class="form-control" name="email" placeholder="Email" value="{{email}}" required>
            </div>
            <div class="form-group">
              <input type="password" class="form-control" name="password" placeholder="Clave" value="{{password}}" required>
            </div>
            <div class="form-group">
              <input type="password" class="form-control" name="confirm_password" placeholder="Confirmar Clave" value="{{confirm_password}}" required>
            </div>          
            <button class="btn btn-primary btn-block">
              Registrarse
            </button>
            <small class="text-center">¿Ya tienes una cuenta? <a href="signin">Inicie Sesión Aquí</a></small>       
          </form>          
        </div>
      </div>
    </div>
  </div>
</main>