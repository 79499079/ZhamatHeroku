<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $(".pago").click(function (evento) {
            var valor = $(this).val();
            if (valor == 'vcontra') {
                $("#pagoEpayco").css("display", "none");
                $("#pagoContra").css("display", "block");
            } else {
                $("#pagoEpayco").css("display", "block");
                $("#pagoContra").css("display", "none");
            }
        });
    });
</script>